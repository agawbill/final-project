<h1>Edit<span class="symbol">#</span>comment</h1>


  <p>
  <span class="blogTitle"><%=@comment.title%></span><br>
  <span class="postedBy">Posted By: <a href="/users/<%=@comment.user.id%>/" class="link"><%=@comment.user.email%></a></span><br>
  <p><%=@comment.content%></p>
  <hr>

<%= form_for @comment do |c| %>
<%= c.text_area :title, :placeholder=>"Title", :class=>"textTitleArea" %><br>
<%= c.text_area :content, :placeholder=>"Content", :class=>"textBodyAreaC" %><br>
<%= c.submit "Update Comment" %>
<%= link_to "Delete Comment?", comment_path, method: :delete,
                                        data: {confirm: "are you super sure??"},
                                        :class=>"link"
%>
</p>
<% end  %>
