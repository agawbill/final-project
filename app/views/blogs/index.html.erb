
<div class="container">
  <div class="col-md-8">
    <h2 id="headerSearch">New<span class="symbol">#</span>blogs</h2>

  <%@blogs.reverse.each do |b|%>
    <p><div id="boxWrapper">

    <span class="blogTitle"><%=b.title%><br></span>
    <span class="postedBy">Posted By: <a href="/admin/<%=b.admin_id%>" class="nav-link"><%=b.admin.email%></a></span><span class="blogDateTime">
     <span class="postedBy">on</span> <%=b.created_at.strftime(
'%a, %b %Y'
  )%> <span class="postedBy">at</span> <%=b.created_at.strftime(
'%I:%M %p'
)%> ET</span>
<p> <%= b.content.html_safe %></p>
<a href="/blogs/<%=b.id%>" class="nav-link">Comments (<%=b.comments.count%>) </a></p>

</div></p>
<%end%>
</div>




<div class="col-md-4">
  <h2 id="headerSearch">Site<span class="symbol">#</span>users</h2>
    <p><div id="boxWrapper">

  <%@users.each_with_index do |u, index|%>
  <p><span class="userList"><span class="symbol"><%=index+1%>:</span> <a href="/admins/<%=u.id%>/" class="nav-link"><%=u.email%></a></span>
  <%end%>
</div>
</p>
  <p>    <h2 id="headerSearch">Popular<span class="symbol">#</span>lists</h2></p>
    <div id="boxWrapper">
      <%@lists.last(5).each_with_index do |x, index|%>

      <span class="userList"><span class="symbol"><%=index +1%>:</span> <a href="/lists/<%=x.id%>/" class="nav-link"><%=x.name%></a></span></p>


      <%end%>
</div>
</p>
  <p>
    <h2 id="headerSearch">Social<span class="symbol">#</span>media</h2></p>
    <div id="boxWrapper">
    <p><a class="twitter-timeline" data-width="700" data-height="600" href="https://twitter.com/gawthegovernor/lists/james?ref_src=twsrc%5Etfw">A Twitter List by gawthegovernor</a> <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script></p>
</div>
</p>
</div>
